{% load json %}

{"id": {{server.id}},
	"name": "{{server.name}}",
	"host": "{{server.host}}",
	"port": {{server.port}},
	"map": "{{server.map}}",
	"player_count": {{server.player_count}},
	"bot_count": {{server.bot_count}},
	"max_players": {{server.max_players}},
	"vac_enabled": {{server.vac_enabled|yesno:"true,false"}},
	"password_protected": {{server.password_protected|yesno:"true,false"}},
	{% if server.network %}
	"network": {{server.network.id}},
	{% else %}
	"network": null,
	{% endif %}
	"online": {{server.is_online|yesno:"true,false"}},
	"last_update": {{server.last_update|timestamp}},
	"location": {
		{% if server.latitude %}
		"latitude": {{server.latitude}},
		{% else %}
		"latitude": null,
		{% endif %}
		{% if server.longitude %}
		"longitude": {{server.longitude}}
		{% else %}
		"longitude": null
		{% endif %}
		}
}
